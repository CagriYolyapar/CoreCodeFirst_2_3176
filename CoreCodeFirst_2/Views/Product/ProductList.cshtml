@model List<Product>

<h1>Urun listesi...Yeni ürün eklemek icin <a asp-controller="Product" asp-action="CreateProduct">tıklayınız</a>   </h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Isim</th>
            <th>Fiyat</th>
            <th>Kategori</th>
            <th>Guncelle</th>
            <th>Sil</th>
        </tr>
    </thead>

    <tbody>

        @foreach (Product item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                @if(item.Category == null){
                    <td>Kategorisi yoktur</td>
                }
                else{
                    <td>@item.Category.CategoryName</td>
                }
               
                <td> <a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a>   </td>
                <td>
                    <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }



    </tbody>
</table>