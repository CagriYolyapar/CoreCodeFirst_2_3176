@model List<Category>

<h1>Kategori listesi...Yeni kategori eklemek icin <a asp-controller="Category" asp-action="CreateCategory">tıklayınız</a>   </h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Isim</th>
            <th>Aciklama</th>
        </tr>
    </thead>

    <tbody>

        @foreach (Category item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
            </tr>
        }



    </tbody>
</table>