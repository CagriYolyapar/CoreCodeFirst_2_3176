@model List<Category>

<h1>Kategori listesi...Yeni kategori eklemek icin <a asp-controller="Category" asp-action="CreateCategory">tıklayınız</a>   </h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Isim</th>
            <th>Aciklama</th>
            <th>Guncelle</th>
            <th>Sil</th>
        </tr>
    </thead>

    <tbody>

        @foreach (Category item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td> <a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a>   </td>
                <td>  
                    <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }



    </tbody>
</table>